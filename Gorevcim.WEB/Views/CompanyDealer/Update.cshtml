@{
    ViewData["Title"] = "Update";
}
@model CompanyDealerDto

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <form asp-controller="CompanyDealer" asp-action="Update" method="post" class="needs-validation" novalidate>
                <h4 class="card-title">Bayi Güncelle</h4>
                <input type="hidden" asp-for= "Id" id="CompanyIdUpdate">


                <div class="mb-3 row">
                    <label asp-for="CompanyId" class="col-md-2 col-form-label">Firma</label>
                    <div class="col-md-6">
                        <select id="CompanyIdSave" asp-for="CompanyId" asp-items="ViewBag.companies" class="form-select" placeholder="Firma Seçiniz"></select>
                        <span asp-validation-for="CompanyId" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="Name" class="col-md-2 col-form-label" for="CompanyNameSave">Bayi Adı</label>
                    <div class="col-md-6">
                        <input asp-for="Name" type="text" class="form-control" id="CompanyNameSave" placeholder="Bayi Adını Yazınız" required>
                        <div class="invalid-feedback">Bayi Adı Boş olamaz!</div>
                    </div>
                </div>



                <div class="mb-3 row">
                    <label asp-for="Adress" class="col-md-2 col-form-label" for="CompanyAdressSave">Bayi Adresi</label>
                    <div class="col-md-6">
                        <input asp-for="Adress" type="text" class="form-control" id="AdressSave" placeholder="Bayi Adresini Yazınız" required>
                        <div class="invalid-feedback">Bayi Adresi Boş olamaz!</div>
                    </div>
                </div>


               

                <input type="submit" class="btn btn-primary waves-effect waves-light me-1 form-group" />

            </form>


        </div>
    </div>
</div>

